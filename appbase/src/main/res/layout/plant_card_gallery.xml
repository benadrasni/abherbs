<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/plant_thumbnails"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thumbnails_height"
        android:background="@color/CardsForeground"
        android:paddingTop="@dimen/thumbnails_padding"
        android:paddingBottom="@dimen/thumbnails_padding"/>

    <ImageView
        android:id="@+id/plant_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plant_thumbnails"
        android:background="@color/CardsForeground"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/bottomInfo"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/plant_photo"
        android:background="@drawable/list_item_shadow_bottom"/>
</RelativeLayout>
